<div class="container">
  <div class="row">
    <div class="col-md-8 col-xl-8 offset-2">
      <div class="col-12 row">
        <h2 class="col-6 ml-5">商品一覧</h2>
        <div class-"col-6 ml-5"><%= link_to "新規登録" ,new_admin_item_path ,class:"btn btn-success ml-5" %></div>
      </div>
        <table class="table table-hover mt-3">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>販売ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @item.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to edit_admin_item_path(item.id) do  %>
                 <%= item.name %>
                <% end %>
              </td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_active %>
                  <span class="text-success"><strong>販売中</strong></span>
                <% else %>
                  <span class="text-black-50"><strong>販売停止中</strong></span>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @item %>
    </div>
  </div>
</div>