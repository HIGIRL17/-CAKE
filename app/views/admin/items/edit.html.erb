<div class="container">
  <div class="d-flex justify-content-center font-weight-bold" style="background-color:#f5f5f5; font-size:25px; margin-left:40px; margin-bottom:30px; height:40px; width:230px;">
    商品編集
  </div>
  <div class="row">
    <div class="container">
      <%= form_with model:[:admin, @item] do |f| %>
      <div class="form-group form-inline row font-weight-bold">
        <%= f.label :"商品画像" ,class: "col-md-3 d-flex justify-content-start"%>
        <%= f.file_field :image, accept: "image/*"  %>
      </div>
      <div class="form-group form-inline row font-weight-bold">
        <%= f.label :"商品名" ,class: "col-md-3 d-flex justify-content-start"%>
        <%= f.text_field :name , class:"col-md-3 form-control form-control-lg" %>
      </div>
      <div class="form-group form-inline row font-weight-bold">
        <%= f.label :"商品説明" ,class: "col-md-3 d-flex justify-content-start"%>
        <%= f.text_area :introduction , class:"col-md-3 form-control form-control-lg" %>
      </div>
      <div class="form-group form-inline row font-weight-bold">
        <%= f.label :"ジャンル" ,class: "col-md-3 d-flex justify-content-start"%>
        <%= f.collection_select :genre_id, @genre, :id, :name , class:"col-md-3 form-control" %>
      </div>
      <div class="form-group form-inline row font-weight-bold">
        <%= f.label :"税抜価格" ,class: "col-md-3 d-flex justify-content-start"%>
        <%= f.text_field :price , class:"col-md-3 form-control form-control-lg" %>円
      </div>
      <div class="form-group form-inline row">
        <%= f.label :"販売ステータス" ,class: "col-md-3 d-flex justify-content-start font-weight-bold"%>
        <%= f.radio_button :is_active, true %>
        <%= f.label :status_true,"販売中" %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :status_false , "販売停止中"%>
      </div>
    </div>
    <%= f.submit "変更を保存" , class:"btn btn-success" %>
    <% end %>
  </div>
</div>
