<div calss="container">
  <div class="d-flex justify-content-center font-weight-bold" style="background-color:#f5f5f5; font-size:25px; margin-left:300px; margin-bottom:30px; height:40px; width:230px;">
    管理者ログイン
  </div>
  <div class="row">
    <div class="col-6 offset-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :"メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-3 form-control" %>
      </div>
      <div class="field">
        <%= f.label :"パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "col-md-3 form-control" %>
      </div>
      <div class="actions mt-3">
        <%= f.submit "ログイン" %>
      </div>
      <% end %>
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>