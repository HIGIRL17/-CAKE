<div class="container">
  <h3><strong>注文一覧</strong></h3>
  <div class="row">
    <div class="col-12">
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.order("id DESC").each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admin_order_path(order)%></td>
              <td><%= order.customer.last_name + " " + order.customer.first_name %></td>
              <td><%= order.order_details.sum(:amount) %></td>
              <td>
                <%= order.status_i18n %>
              </td>
                </tr>
                <% end %>
          </tbody>
        </table>
      <%= paginate @orders, style: "font-family: HiraMinPro-W6; color: #000000; margin: 30px 0;" %>
    </div>
  </div>
</div>