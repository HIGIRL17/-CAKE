<div class="container">
  <div class="row">
    <div class="col-12">
      <h3><strong>会員一覧</strong></h3>
      <table class="table table-bordered table-condensed">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customer.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.last_name %><%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_deleted == false %>
                <span class="text-success"><strong>有効</strong></span>
              <% else %>
                <span class="text-black-50"><strong>退会</strong></span>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <%= paginate @customer %>
    </div>
  </div>
</div>