<div class="container">
  <div class="d-flex justify-content-center font-weight-bold" style="background-color:#f5f5f5; font-size:25px; margin-bottom:30px; height:40px; width:400px;">
    <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細
  </div>
  <div class="row">
    <div class="container">
      <div class="form-group form-inline row ">
        <label class="col-md-3 d-flex justify-content-start font-weight-bold">会員ID</label>
        <%= @customer.id %>
      </div>
      <div class="form-group form-inline row">
        <label class="col-md-3 d-flex justify-content-start font-weight-bold">氏名</label>
        <%= @customer.last_name %>　<%= @customer.first_name %>
      </div>
      <div class="form-group form-inline row">
        <label class="col-md-3 d-flex justify-content-start font-weight-bold">フリガナ</label>
        <%= @customer.last_name_kana %>　<%= @customer.first_name_kana %>
      </div>
      <div class="form-group form-inline row">
        <label class="col-md-3 d-flex justify-content-start font-weight-bold">郵便番号</label>
        <%= @customer.postal_code %>
      </div>
      <div class="form-group form-inline row">
        <label class="col-md-3 d-flex justify-content-start font-weight-bold">住所</label>
        <%= @customer.address %>
      </div>
      <div class="form-group form-inline row">
        <label class="col-md-3 d-flex justify-content-start font-weight-bold">電話番号</label>
        <%= @customer.telephone_number %>
      </div>
      <div class="form-group form-inline row">
        <label class="col-md-3 d-flex justify-content-start font-weight-bold">メールアドレス</label>
        <%= @customer.email %>
      </div>
      <div class="form-group form-inline row">
        <label class="col-md-3 d-flex justify-content-start font-weight-bold">会員ステータス</label>
        <% if @customer.is_deleted == false %>
          <span class="text-success"><strong>有効</strong></span>
        <% else %>
          <span class="text-black-50"><strong>退会</strong></span>
        <% end %>
      </div>
    </div>
      <div class="mt-3">
        <%= link_to "編集する", edit_admin_customer_path , class:"btn btn-success" %>
        <span class="pl-5"><%= link_to "注文履歴一覧を見る", orders_path , class:"btn btn-primary" %></span>
      </div>
    </div>
  </div>
</div>