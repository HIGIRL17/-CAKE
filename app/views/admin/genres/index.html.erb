<div class="d-flex justify-content-center font-weight-bold" style="background-color:#f5f5f5; font-size:25px; margin-left:190px; margin-bottom:30px; height:40px; width:230px;">
  ジャンル一覧・追加
</div>
<%= form_with model: [:admin,@genre] do |f| %>
<div class="container">
  <div class="row">
    <label>ジャンル名</label>
    <%= f.text_field :name, placeholder:"ジャンル名",class:"ml-2" %>
    <%= f.submit "新規登録", class:"btn btn-success ml-4" %>
  </div>
<% end %>
</div>
<div class="container">
  <div class="row">
    <div class="col-4 mt-2">
      <strong>ジャンル</strong>
      <table class="table mt-2">
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
      </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>