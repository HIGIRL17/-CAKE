<div class="col-xs-2">
    <table class="table table-bordered table-hover text-center ec-genre-list font-weight-bold " >
      <tr>
        <td>
          <h6>ジャンル検索</h6>
        </td>
      </tr>

      <% genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to genre.name, items_path(genre_id: genre.id) %>
            </td>
        </tr>
      <% end %>
    </table>
</div>