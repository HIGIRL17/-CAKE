<div class="container mt-3 mx-3">

  <h2 class="ml-5">マイページ</h2>

  <div class="customer-information mt-4">
    <div class="row col-3" style="margin-left: 0; margin-right: 0; padding-left: 0;">
      <h4 class="col-6 d-flex align-items-center justify-content-left" style="margin-bottom: 0; padding-left: 0;"><strong>登録情報</strong></h4>
      <%= link_to "編集する", edit_infomation_path(current_customer), class: "btn btn-success " %>
    </div>
    <table class="col-7 table table-bordered mt-3 mb-5">
      <tr>
        <td class="col-3 border border-dark">氏名</td>
        <td class="border border-dark"><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <td class="col-3 border border-dark">カナ</td>
        <td class="border border-dark"><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td class="col-3 border border-dark">郵便番号</td>
        <td class="border border-dark"><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td class="col-3 border border-dark">住所</td>
        <td class="border border-dark"><%= @customer.address %></td>
      </tr>
      <tr>
        <td class="col-3 border border-dark">電話番号</td>
        <td class="border border-dark"><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td class="col-3 border border-dark">メールアドレス</td>
        <td class="border border-dark"><%= @customer.email %></td>
      </tr>
    </table>

    <div class="row col-3" style="margin-left: 0; margin-right: 0; padding-left: 0;">
      <h4 class="col-6 d-flex align-items-center justify-content-left" style="margin-bottom: 0; padding-left: 0;"><strong>配送先</strong></h4>
      <%= link_to "一覧を見る", addresses_path(current_customer) , class: "btn btn-primary" %>
      <div class="w-100 mt-4"></div>
      <h4 class="col-6 d-flex align-items-center justify-content-left" style="margin-bottom: 0; padding-left: 0;"><strong>注文履歴</strong></h4>
      <%= link_to "一覧を見る", orders_path(current_customer) , class: "btn btn-primary" %>
    </div>
  </div>

</div>