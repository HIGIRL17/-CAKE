<div class="container">
  <div class="d-flex justify-content-center font-weight-bold" style="background-color:#f5f5f5; font-size:25px; margin-left:190px; margin-bottom:30px; height:40px; width:230px;">
    <h2>会員情報編集</h2>
  </div>
  <div class="row">
    <div class="container font-weight-bold">
      <%= form_with model: @customer ,url: edit_infomation_path  do |f| %>
      <div class="form-group form-inline row font-weight-bold">
        <%= f.label :"氏名", class: "col-md-3 d-flex justify-content-start" %>
        <%= f.text_field :last_name, class: "col-md-3 form-control form-control-lg" %> <%= f.text_field :first_name, class: "col-md-3 form-control form-control-lg" %>
      </div>
      <div class="form-group form-inline row font-weight-bold">
        <%= f.label :"フリガナ", class: "col-md-3 d-flex justify-content-start" %>
        <%= f.text_field :last_name_kana, class: "col-md-3 form-control form-control-lg" %> <%= f.text_field :first_name_kana, class: "col-md-3 form-control form-control-lg" %>
      </div>
      <div class="form-group form-inline row font-weight-bold">
        <%= f.label :"郵便番号", class: "col-md-3 d-flex justify-content-start" %>
        <%= f.text_field :postal_code, class: "col-md-3 form-control form-control-lg" %>
      </div>
      <div class="form-group form-inline row font-weight-bold">
        <%= f.label :"住所", class: "col-md-3 d-flex justify-content-start" %>
        <%= f.text_field :address, class: "col-md-3 form-control form-control-lg " %>
      </div>
      <div class="form-group form-inline row font-weight-bold">
        <%= f.label :"電話番号", class: "col-md-3 d-flex justify-content-start" %>
        <%= f.text_field :telephone_number, class: "col-md-3 form-control form-control-lg" %>
      </div>
      <div class="form-group form-inline row font-weight-bold">
        <%= f.label :"メールアドレス", class: "col-md-3 d-flex justify-content-start" %>
        <%= f.text_field :email, class: "col-md-3 form-control form-control-lg" %>
      </div>
      <%= f.submit "変更を保存" , class:"btn btn-success" %>
      <%= link_to "退会する" ,unsubscribe_path, class:"btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>