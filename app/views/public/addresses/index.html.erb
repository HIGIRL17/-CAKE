<div class="mx-auto container">
  <div class="d-flex justify-content-center font-weight-bold" style="background-color:#f5f5f5; font-size:25px; margin-left:40px; margin-bottom:30px; height:40px; width:220px;">
    配送先登録/一覧
  </div>
  <div class="container font-weight-bold">
      <%= form_with model: @address, url: addresses_path, class: "container" do |f| %>
      <div class="form-group form-inline row font-weight-bold">
        <%= f.label :"郵便番号(ハイフンなし)", class: "col-md-3 d-flex justify-content-start" %>
          <%= f.text_field :postal_code, autofocus: true, class: "col-md-3 form-control form-control-lg", placeholder: "0000000" %>
      </div>
      <div class="form-group form-inline row font-weight-bold">
        <%= f.label :"住所", class: "col-md-3 d-flex justify-content-start" %>
          <%=  f.text_field :address, class: "col-md-7 form-control form-control-lg", placeholder: "東京都渋谷区代々木神園町0-0" %>
      </div>
      <div class="form-group form-inline row font-weight-bold">
        <%= f.label :"名前", class: "col-md-3 d-flex justify-content-start" %>
          <%= f.text_field :name, class: "col-md-3 form-control form-control-lg", placeholder: "令和道子" %>
      </div>
        <%= f.submit '新規登録' ,class: "offset-4 btn btn-success btn-lg mt-3", style: "width:180px;"  %>
        <% end %>
  </div>
</div>
<div class="mx-auto container mt-4">
  <div class="row">
    <table class="table table-hover table-bordered col-12">
      <thead>
        <tr class="address-info">
          <th class="col-xs-2">郵便番号</th>
          <th class="col-xs-6">住所</th>
          <th class="col-xs-2">宛名</th>
          <th class="col-xs-2"></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td class="col-xs-2"><%= address.postal_code %></td>
          <td class="col-xs-6"><%= address.address %></td>
          <td class="col-xs-2"><%= address.name %></td>
          <td class="col-xs-2">
            <%= link_to "編集する", edit_address_path(address), class: "glyphicon glyphicon-pencil btn-sm btn-primary" %>
            <%= link_to "削除する", address_path(address), method: :DELETE, data: {confirm: "本当に削除してもよろしいですか？"}, class: "glyphicon glyphicon-trash btn-sm btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>